#include<bits/stdc++.h>
using namespace std;
int solve(int n,int arr[]){
    
    int idk=-1;
    int lsidk=-1;
    for(int i=0;i<n;i++){
        if(arr[i]==0){
            idk=i;
            break;
        }
    }
    for(int i=n-1;i>=0;i--){
        if(arr[i]==0){
            lsidk=i;
            break;
        }
    }
     if(idk == -1) {
        return n-1;
    }
    for(int i=idk;i<=lsidk;i++){
        if(arr[i]==0){
           arr[i]=1;
           
        }
        else{
            arr[i]=0;
        }
    }
   int count=0;
    for(int i=0;i<n;i++){
        if(arr[i]==1){
            count++;
        }
    }
    
      return count;

}
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<solve(n,arr);
    return 0;
}
